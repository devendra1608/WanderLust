<% layout("layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <div class="listings">
    <%for(let listing of allListings) {%>
      <a href="/listings/<%= listing._id %>" class="listing-card">
        <div class="card">
          <img src="<%= listing.image %>" alt="listing image">
          <div class="card-body">
            <h3><%= listing.title %></h3>
            <i>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</i>
          </div>
        </div>
      </a>
    <%}%>
  </div>
</body>


