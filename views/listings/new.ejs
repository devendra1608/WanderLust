<% layout("layouts/boilerplate") %>

<div class="add-form">
  <h3>Create a new listing</h3>

  <form method="post" action="/listings" class="listing-form">

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="listing[title]" placeholder="Enter title" id="title">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="listing[description]" placeholder="Enter description" id="description"></textarea>
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      <input type="text" name="listing[image]" placeholder="Enter image URL" id="image">
    </div>

    <div class="form-group">
      <label for="price">Price (â‚¹)</label>
      <input type="number" name="listing[price]" placeholder="Enter price" id="price">
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <input type="text" name="listing[country]" placeholder="Enter country" id="country">
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" name="listing[location]" placeholder="Enter location" id="location">
    </div>

    <button type="submit" class="submit-btn">Add Listing</button>

  </form>
</div>
